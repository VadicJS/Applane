<apex:page showHeader="false" standardStylesheets="false" sidebar="false" applyHtmlTag="false" applyBodyTag="false"
           docType="html-5.0" controller="SMS_ShopsRandomPublicController">

    <apex:includeScript value="{!$Resource.jQuery}"/>
    <apex:slds />
    <div class="slds-scope" id="mainDiv">
        <div class="success" style="height: 4rem; display: none; position: absolute; left: 400px;
" id="successToast">
            <div class="slds-notify_container slds-is-relative">
                <div class="slds-notify slds-notify_toast slds-theme_success" role="alert">
                    <span class="slds-icon_container slds-icon-utility-success slds-m-right_small slds-no-flex slds-align-top"
                          title="">
                        <svg class="slds-icon slds-icon_small" aria-hidden="true">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink"
                                 xlink:href="/apexpages/slds/latest/assets/utility-sprite/svg/symbols.svg#success"></use>
                        </svg>
                    </span>
                    <div class="slds-notify__content">
                        <h2 class="slds-text-heading_small ">{!$Label.Web_to_lead_notification}</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="slds-tabs_default">
            <ul class="slds-tabs_default__nav" role="tablist">
                <li class="slds-tabs_default__item slds-is-active" title="Item Two" id="list-item-2" role="presentation">
                    <a class="slds-tabs_default__link" href="javascript:void(0);" role="tab" tabindex="-1" onclick="toggleClass('#tab-default-2', '#list-item-2')" aria-selected="false" aria-controls="tab-default-2" id="tab-default-2__item">{!$Label.AP_Contact}</a>
                </li>
                <li class="slds-tabs_default__item" title="Item Three" id="list-item-3" role="presentation">
                    <a class="slds-tabs_default__link" href="javascript:void(0);" role="tab" tabindex="-1" onclick="toggleClass('#tab-default-3', '#list-item-3')" aria-selected="false" aria-controls="tab-default-3" id="tab-default-3__item">{!$Label.AP_Offer}</a>
                </li>
                <li class="slds-tabs_default__item" title="Item One" id="list-item-1" role="presentation">
                    <a class="slds-tabs_default__link" href="javascript:void(0);" role="tab" tabindex="0" onclick="toggleClass('#tab-default-1', '#list-item-1')" aria-selected="true" aria-controls="tab-default-1" id="tab-default-1__item">{!$ObjectType.SMS_Shop__c.labelPlural}</a>
                </li>
            </ul>
            <div id="tab-default-1" class="slds-tabs_default__content slds-hide" role="tabpanel" aria-labelledby="tab-default-1__item">

                <div class="slds-page-header" role="banner" id="banner"
                     style="margin-bottom: 24px; background: #fffdfc;border-radius: 3px; width:99%; border: 1px solid lightgray; box-shadow: 2px 2px 3px #888888;">
                    <span class="slds-text-title--caps slds-line-height--reset">{!$Label.Shop_Management_System}</span>
                    <h1 class="slds-page-header__title slds-truncate">{!$Label.Shops_we_collaborate}</h1>
                </div>
                <table class="slds-table slds-table_bordered slds-table_cell-buffer" style="font-size: 18px; padding: 10px; ">
                    <thead>
                    <tr class="slds-text-title_caps">
                        <th scope="col">
                            <div class="slds-truncate" title="{!$Label.Original_name}">{!$Label.Original_name}</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="{!$Label.Country}">{!$Label.Country}</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="{!$Label.City}">{!$Label.City}</div>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <apex:repeat value="{!Shops}" var="shop">
                        <tr>
                            <th scope="row" data-label="{!$Label.Original_Name}">
                                <div class="slds-truncate" title="{!shop.Previous_Name__c}">{!shop.Previous_Name__c}</div>
                            </th>
                            <td data-label="{!$Label.Country}">
                                <div class="slds-truncate" title="{!shop.Country__c}">{!shop.Country__c}</div>
                            </td>
                            <td data-label="{!$Label.City}">
                                <div class="slds-truncate" title="{!shop.City__c}">{!shop.City__c}</div>
                            </td>
                        </tr>
                    </apex:repeat>
                    </tbody>
                </table>
            </div>
            <div id="tab-default-2" class="slds-tabs_default__content slds-show" role="tabpanel" aria-labelledby="tab-default-2__item">
                <form action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" id="formsob" method="POST">
                    <input type="hidden" name="oid" value="00D1r000000eT1v"/>
                    <input type="hidden" name="lead_source" value="Web"/>

                    <div class="slds-form slds-form_compound">
                        <fieldset class="slds-form-element">
                            <legend class="slds-form-element__label slds-text-title_caps">Name</legend>
                            <div class="slds-form-element__group">
                                <div class="slds-form-element__row">
                                    <div class="slds-form-element slds-size_1-of-2">
                                        <label for="first_name" class="slds-form-element__label">First Name</label><input id="first_name" maxlength="40" name="first_name" size="20" type="text" class="slds-input" required="true"/>
                                    </div>
                                    <div class="slds-form-element slds-size_1-of-2">
                                        <label class="slds-form-element__label" for="last_name">Last Name</label><input class="slds-input" id="last_name" maxlength="80" name="last_name" size="20" type="text" required="true"/>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset class="slds-form-element">
                            <legend class="slds-form-element__label slds-text-title_caps">Contact</legend>
                            <div class="slds-form-element__group">
                                <div class="slds-form-element__row">
                                    <div class="slds-form-element slds-size_1-of-2">
                                        <label for="email" class="slds-form-element__label">Email</label><input id="email" maxlength="80" name="email" size="20" type="text" class="slds-input" required="true"/>
                                    </div>
                                    <div class="slds-form-element slds-size_1-of-2">
                                        <label class="slds-form-element__label" for="phone">Phone</label><input class="slds-input" id="phone" maxlength="80" name="phone" size="20" type="text"/>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset class="slds-form-element">
                            <div class="slds-form-element__group">
                                <div class="slds-form-element__row">
                                    <div class="slds-form-element slds-size_1-of-2">
                                        <label class="slds-form-element__label" for="city">City</label><input class="slds-input" id="city" maxlength="40" name="city" size="20" type="text"/>
                                    </div>
                                    <div class="slds-form-element slds-size_1-of-2">
                                        <label class="slds-form-element__label" for="company">Company</label><input class="slds-input" id="company" maxlength="40" name="company" size="20" type="text"/>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <input type="submit" name="submit" id="submitBtn" class="slds-button slds-button_brand"/>
                    </div>
                </form>
            </div>
            <div id="tab-default-3" class="slds-tabs_default__content slds-hide" role="tabpanel" aria-labelledby="tab-default-3__item">{!$Label.AP_Offer}</div>
        </div>
    </div>
    <script>
        toggleClass = function (elementId, listItemId) {
            $(".slds-tabs_default__content, slds-show").attr('class', 'slds-tabs_default__content slds-hide');
            $(elementId).attr('class', 'slds-tabs_default__content slds-show');
            $(".slds-tabs_default__item, slds-is-active").attr('class', 'slds-tabs_default__item');
            $(listItemId).addClass('slds-is-active');
        }

        $( "#formsob" ).on('submit', function(event) {
            event.preventDefault();
            $("#successToast").slideToggle('fast').delay(3000).slideToggle('fast');
            $.ajax({
                type: $(this).attr('method'),
                url: $(this).attr('action'),
                data: $(this).serialize(),
                success: function(data) {
                    $('#ajax-response').html(data);
                }
            });
            $('.slds-input').val('');
        });
    </script>
</apex:page>