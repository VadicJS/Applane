<aura:component description="AP_hangarsSearchCard" controller="AP_HangarsSearchController">
    <aura:attribute name="hangar" type="Object"/>
    <aura:attribute name="hangarId" type="Id"/>
    <aura:attribute name="targetFields" type="Object"/>
    <force:recordData aura:id="hangarRecord"
                      recordId="{!v.hangarId}"
                      targetFields="{!v.targetFields}"
                      fields="Name, City__c, Country__c, Capacity__c"/>

    <div class="slds-media" id="item" onclick="{!c.getRecord}">
        <div class="slds-media__figure">
            <lightning:icon iconName="standard:home" alternativeText="h" size="medium"/>
        </div>
        <div class="slds-media__body">
            <div class="slds-grid">
                <h3 class="slds-text-heading_small slds-m-bottom_xx-small">{!v.targetFields.Name}</h3>
            </div>
            <div aura:id="hangarDetails" class="slds-m-top_small">
                <ul class="slds-grid slds-wrap">
                    <li class="slds-list__item slds-size_1-of-2">
                        <span class="slds-text-color_weak slds-m-right_small">{!$Label.c.City}:</span>{!v.targetFields.City__c}
                    </li>
                    <li class="slds-list__item slds-size_1-of-2">
                        <span class="slds-text-color_weak slds-m-right_small">{!$Label.c.AP_Capacity}:</span>{!v.targetFields.Capacity__c}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</aura:component>