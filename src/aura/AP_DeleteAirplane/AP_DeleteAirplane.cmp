<aura:component description="AP_DeleteAirplane" implements="force:lightningQuickActionWithoutHeader,flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="recordError" type="String" access="private"/>

    <force:recordData aura:id="recordHandler"
                      recordId="{!v.recordId}"
                      fields="Id"
                      targetError="{!v.recordError}"
                      recordUpdated="{!c.handleRecordUpdated}"/>
    <aura:if isTrue="{!not(empty(v.recordError))}">
        <div class="recordError">
            <ui:message title="Error" severity="error" closable="true">
                    {!v.recordError}
            </ui:message>
        </div>
    </aura:if>


    <div align="center" style="display: flex; flex-direction: column; align-content: center; margin-top: 80px;">
        <span style="font-size: 1.5em;">{!$Label.c.AP_Delete_Airplane_Confirm}</span>
        <div style="width: 100px">
            <lightning:button label="Delete"
                    onclick="{!c.handleDeleteRecord}"
                    variant="destructive"/>
        </div>

    </div>
</aura:component>